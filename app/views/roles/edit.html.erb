<h1>Roles#edit</h1>
<p>Find me in app/views/roles/edit.html.erb</p>


<div class="content-wrapper">
  <div class="container" style="margin-top: 60px; margin-bottom: -60px;">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <%= simple_form_for [@project, @role] do |f| %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.association :skills, as: :check_boxes, :include_blank => false, :label_method => lambda { |skill| "#{skill.skill}" } %>
          <%= f.input :icon, as: :attachinary %>

        <div class="button-flex">
          <%= f.submit "Update", class: "btn btn-primary" %>
        <% end %>
        <%= button_to "Delete", project_role_path(@project, @role), method: :delete, class: "btn btn-warning" %>
        </div>
     </div>
    </div>
  </div>
</div>
