<div class="edit-wrapper">
  <div class="content-wrapper" style="background-color: #EEEEEE">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-sm-offset-3">
          <br>
          <h1 class="text-center"><strong><em>Edit Profile</em></strong></h1>
          <hr>
          <%= simple_form_for(@user) do |f| %>
            <%= f.input :first_name %>
            <%= f.input :last_name %>
            <%= f.input :address %>
            <%= f.input :address_line_2 %>
            <%= f.input :city %>
            <%= f.input :state %>
            <%= f.input :zip %>
            <%= f.input :country %>
            <%= f.input :education %>
            <%= f.input :profile_photo, as: :attachinary %>
            <%= f.submit class: "btn btn-primary", style: "border:none; background-color: #2f3f59; margin-bottom: 25px;" %>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
