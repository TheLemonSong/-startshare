<% if @user.profile_photo %>
  <% photo = cl_image_path @user.profile_photo.path %>
<% else %>
  <% photo = image_path 'face_placeholder.png' %>
<% end %>


<div class="container-fluid profile-banner">
  <div class="user-img" style="background-image: url('<%= photo %>');">

  </div>
  <div class="user-info">
    <h1><%= @user.first_name %> <%= @user.last_name %></h1>
    <p><i class="fa fa-globe fa-fw"></i> <%= @user.city %></p>
    <p><i class="fa fa-graduation-cap fa-fw"></i> <%= @user.education %></p>
  </div>
  <% if policy(@user).update? %>
    <%= link_to edit_user_path(@user), class: "edit-profile-btn" do %>
      <i class="fa fa-wrench"></i>
    <% end %>
  <% end %>
</div>
<div class="container">
  <br>
  <div style="display: flex-center;">
    <h2 class="text-center"><strong>Skills & Experience</strong></h2>
    <%= link_to new_user_skill_path do %>
      <i class="fa fa-plus-circle" style="font-size: 40px; margin-left: 110px; margin-bottom: 15px;"></i>
    <% end %>
    <hr>
  </div>
      <div class="row">
        <% @skills.each do |skill| %>
          <div class="col-xs-8 col-xs-offset-2">
            <%= render "user_skills/card", skill: skill %>
          </div>
        <% end %>
      </div>
    </div>
</div>

