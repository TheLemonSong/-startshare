<div class="container-fluid profile-banner">
  <div class="user-img" style="background-image: url('<%= image_path "face_placeholder.png" %>');">

  </div>
  <div class="user-info">
    <h1><%= @user.first_name %> <%= @user.last_name %></h1>
    <p><i class="fa fa-globe fa-fw"></i> <%= @user.city %></p>
    <p><i class="fa fa-graduation-cap fa-fw"></i> <%= @user.education %></p>
  </div>
  <% if current_user.id == @user.id %>
    <%= link_to edit_user_path(current_user), class: "edit-profile-btn" do %>
      <i class="fa fa-wrench"></i>
    <% end %>
  <% end %>
</div>
