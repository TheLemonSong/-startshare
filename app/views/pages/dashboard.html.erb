<div class="content-wrapper">
  <div class="container">
    <br>
    <h1 class="text-center">My Projects</h1>
    <hr>
    <div class="row">
      <% if @projects.any? %>
        <% @projects.each do |project| %>
          <div class="col-xs-12 col-sm-4">
            <%= link_to project_path(project) do %>
              <div class="card">
                <%= render "projects/card", project: project %>
              </div>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <h2 class="text-center"><%= "You have no projects at the moment" %></h2>
      <% end %>
    </div>
      <div class="text-center">
        <% if policy(User).create? %>
          <%= link_to "Create a project", new_project_path, class: "btn btn-primary btn-lg" %>
        <% end %>
      </div>
      <hr>
      <br>

      <br>
    <h1 class="text-center">Roles applied for</h1>
      <hr>
    <div class="row">
      <% if current_user.roles.empty? %>
        <h2 class="text-center"><%= "You have no applications pending" %></h2>
        <% else %>
          <% current_user.roles.each do |role| %>
            <div class="col-xs-12 col-sm-4">
              <div class="card">
                <%= render "roles/card", role: role %>
              </div>
            </div>
          <% end %>
      <% end %>
    </div>
      <hr>
      <br>
  </div>
</div>
