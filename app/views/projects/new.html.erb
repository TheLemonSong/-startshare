<div class="content-wrapper">
  <div class="container" style="margin-top: 60px; margin-bottom: 40px;">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3" style="border-radius: 8px; padding: 8px; background-color: #D3D3D3">
        <h2><center>Project Details</center></h2>
        <hr>
        <%= simple_form_for(@project) do |f| %>
          <%= f.input :name %>
          <%= f.input :summary %>
          <%= f.input :details, :as => :text %>
          <%= f.input :located %>
          <%= f.input :start_date %>
          <%= f.input :end_date %>
          <%= f.input :stage %>
          <%= f.input :photo, as: :attachinary %>
          <%= f.submit :create, class: "btn btn-success", style: "background-color: #2f3f59; border:none;" %>
        <% end %>
     </div>
    </div>
  </div>
</div>
