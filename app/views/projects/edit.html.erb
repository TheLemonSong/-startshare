<div class="content-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <h1>Edit your project</h1>

        <%= simple_form_for(@project) do |f| %>
          <%= f.input :name %>
          <%= f.input :summary %>
          <%= f.input :details %>
          <%= f.input :located %>
          <%= f.input :start_date %>
          <%= f.input :end_date %>
          <%= f.input :stage %>
          <%= f.input :photo, as: :attachinary %>

        <div class="button-flex">
          <%= f.submit "Update", class: "btn btn-primary" %>
        <% end %>
        <%= button_to "Delete", project_path(@project), method: :delete, class: "btn btn-warning" %>
        </div>
     </div>
    </div>
  </div>
</div>
