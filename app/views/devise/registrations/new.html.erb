<div class="edit-wrapper" style="color:white; background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path 'background3.jpg' %>')">
  <div class=content-wrapper>
    <div class="container">
      <div class="row">

      <div class="col-xs-12 col-sm-6 col-md-offset-3">

        <h2>Sign up</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">

            <%= f.input :first_name, required: true, autofocus: true %>
            <%= f.input :last_name %>
            <%= f.input :education %>
            <%= f.input :city %>
            <%= f.input :zip %>
            <%= f.input :country, priority: ["GB", "FR", "DE"], include_blank: 'Select a country' %>
            <%= f.input :email %>
            <%= f.input :password, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation %>


          <div class="form-actions">
            <%= f.submit class: "btn btn-primary" %>
          </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
