<div class="edit-wrapper" style="background-color: #f2f2f2>
  <div class=content-wrapper>
    <div class="container">
      <div class="row">

      <div class="col-xs-12 col-sm-6 col-md-offset-3">

        <h2 class="text-center">Sign up</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">

            <%= f.input :first_name, required: true, autofocus: true %>
            <%= f.input :last_name %>
            <%= f.input :education %>
            <%= f.input :city %>
            <%= f.input :country, priority: ["US", "GB", "FR", "DE"], include_blank: 'Select a country' %>
            <%= f.input :email %>
            <%= f.input :password, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation %>
            <%= f.input :profile_photo, as: :attachinary %>

          <div class="form-actions">
            <%= f.submit class: "btn btn-primary" %>
          </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
</div>

<%= content_for(:after_js) do %>
  <script src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyDANjx3bosEtIyzJaoWs50Wnt6nt_1rmxU"></script>
<% end %>
