<div class="edit-wrapper" style="background: #f2f2f2">
  <div class="content-wrapper">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-sm-offset-3">
          <br>
          <h1 class="text-center"><strong><em>Edit <%= @user_skill.skill.skill %> Skills</em></strong></h1>
          <hr>
          <%= simple_form_for(@user_skill) do |f| %>
            <%= f.input :years, collection: (1..30).to_a %>
            <%= f.input :description, :as => :text %>
            <div class="text-left">
              <%= f.submit "Edit", class: "btn btn-primary" %>
            <% end %>
              <%= button_to "Delete", user_skill_path(@user_skill), method: :delete, class: "btn btn-warning"%>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>
